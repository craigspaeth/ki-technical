{
  "editor.formatOnSave": true,
  "editor.rulers": [80, 100],
  "editor.tabSize": 2,
  "editor.defaultFormatter": "biomejs.biome",
  "terminal.integrated.defaultProfile.osx": "zsh",
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "editor.codeActionsOnSave": {
    "source.organizeImports.biome": "explicit"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "search.exclude": {
    ".next/**/*": true
  }
}
